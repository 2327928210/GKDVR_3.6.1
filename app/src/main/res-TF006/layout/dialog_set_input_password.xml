<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- title -->

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="#ffffff"
        android:text="@string/WIFI_setting"
        android:textSize="25sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ssid"/>
    <TextView
        android:textSize="15sp"
        android:id="@+id/ssid_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="helloworld"/>

    <TextView
        android:textSize="15sp"
        android:singleLine="true"
        android:id="@+id/et_input_ssid"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_password"/>

        <EditText
            android:textSize="15sp"
            android:hint="@string/pwd_hint"
            android:singleLine="true"
            android:digits="@string/chinese"
            android:id="@+id/et_inputpassword_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Confirm_password"/>

        <EditText
            android:textSize="15sp"
            android:hint="@string/pwd_hint"
            android:singleLine="true"
            android:digits="@string/chinese"
            android:id="@+id/et_inputpassword_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/bt_inputpassword_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_sure_bg_selector"
            android:text="@string/sure"
             />

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:id="@+id/bt_inputpassword_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/dialog_cancel_bg_selector"
            android:text="@string/cance" />
    </RelativeLayout>

</LinearLayout>